  <configuration>

    <!-- Whether the Ambient Events may involve big vehicles.-->
    <allowBigVehicles>true</allowBigVehicles>

    <!-- Whether the Ambient Events may involve Emergency Vehicles.-->
    <allowEmergencyVehicles>true</allowEmergencyVehicles>

    <allowHighEndVehicles>true</allowHighEndVehicles>
    
    <!-- The (percentage) chance of any particular special vehicles spawning.-->
    <chance bigVehicles="10" emergencyVehicles="5" highEndVehicles="15"/>

    <!-- Settings for the StolenVehicle callout.-->
    <StolenVehicle>
      <!-- The passenger details for ethe vehicle.-->
      <passengers maximum="1" chance="60"/>

      <!-- 
      WARNING: You must type either "precise", "area" or "none" in this setting WITHOUT quotes. 
      Otherwise the plugin won't recognise what you mean! This controls the type of waypoint
      that will be added when you are offered the Stolen Vehicle Ambient Event.
        
        none -> No waypoint
        precise -> A precise blip will be added to your radar
        area -> An area search will be added to your radar
      
      -->
      <waypointMode>precise</waypointMode>
      
    </StolenVehicle>
      
      <!-- If you would like to set weapons, please edit the weapons.xml file in the same directory.--> 
    
  </configuration>

  <spawnData>

    <!--  Vehicles declared here will be treated as regular vehicles. If you want to add to this, 
          make sure you copy all XML attributes correctly, else you risk your entry being treated
          as another type of vehicle.
        -->
    <vehicle isBig="false" isEmergency="false" isHighEnd="false" maxPeds="4">STANIER</vehicle>
    <vehicle isBig="false" isEmergency="false" isHighEnd="false" maxPeds="2">BLISTA</vehicle>
    <vehicle isBig="false" isEmergency="false" isHighEnd="false" maxPeds="4">DILETTANTE</vehicle>
    <vehicle isBig="false" isEmergency="false" isHighEnd="false" maxPeds="2">ISSI2</vehicle>
    <vehicle isBig="false" isEmergency="false" isHighEnd="false" maxPeds="2">PANTO</vehicle>
    <vehicle isBig="false" isEmergency="false" isHighEnd="true" maxPeds="2">F620</vehicle>

  </spawnData>



</vehicles>