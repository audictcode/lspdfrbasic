  <!-- This section seperates settings for specific Ambient Events. -->
  <IndividualEvents>

    <!-- This section is for the Stolen Vehicle Ambient Event -->
    <StolenVehicle>

      <!-- Whether suspects should be armed using the list of Potential Weapons below. -->
      <ArmSuspects>true</ArmSuspects>
      <!-- Whether only the passenger should be armed. Alternatively, you can just arm all people in the car.-->
      <ArmOnlyPassenger>false</ArmOnlyPassenger>

      <!-- See below for description. -->
      <OccuranceChances most="70" med="50" least="25" />
      
      <!-- 
      Potential weapons the suspects might be given.
      
      Occurance = how common the weapon will be. Uses chances in the configuration option above.
      
      Most = % weapons with Occurance="1" will spawn. (Should be highest)
      Med = % weapons with Occurance="2" will spawn.
      Least = % weapons with Occurance="3" will spawn. (Should be lowest)
      -->
      <PotentialWeapons>

        <weapon occurance="1">WEAPON_STUNGUN</weapon>
        <weapon occurance="1">WEAPON_HAMMER</weapon>
        <weapon occurance="1">WEAPON_DAGGER</weapon>
        <weapon occurance="2">WEAPON_PISTOL</weapon>
        <weapon occurance="3">WEAPON_MICROSMG</weapon>
        
      </PotentialWeapons>
    
    </StolenVehicle>
    
  </IndividualEvents>


</weapons>