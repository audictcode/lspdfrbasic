  <configuration>

    <!--Wether suspects may or may not carry melee weapons.-->
    <enableMelee>true</enableMelee>
    
    <!--Whether suspects may or may not carry firearms.-->
    <enableFirearms>true</enableFirearms>
    
    <!--Whether suspects may or may not carry extremely dangerous 
    heavy weapons. Make sure you're prepared!-->
    <enableHeavyWeapons>true</enableHeavyWeapons>

    <chance melee="95" firearm="75" deadly="3" />
    
  </configuration>
  
  <!-- 
  Data regarding what the one or two suspects will carry. You can mix and
  match the locations of declarations, because it is the tag names "melee", 
  "firearm", and "deadly" that define which category - although I have setup
  a nice little workspace for you to tweak! Have at it :)
  -->
  <inventory>

    <!-- Weapons declared here will come under the MELEE category.-->
    <melee>WEAPON_KNIFE</melee>
    <melee>WEAPON_BOTTLE</melee>
    <melee>WEAPON_KNUCKLE</melee>
    <melee>WEAPON_BATTLEAXE</melee>

    <!-- Weapons declared here will come under the FIREARMS category.-->
    <firearm>WEAPON_PISTOL</firearm>
    <firearm>WEAPON_SMG_MK2</firearm>
    <firearm>WEAPON_RAYCARBINE</firearm>

    <!-- Weapons declared here will come under the HEAVY WEAPONS category.-->
    <deadly>WEAPON_GRENADELAUNCHER</deadly>
    <deadly>WEAPON_RPG</deadly>
    <deadly>WEAPON_RAYMINIGUN</deadly>
    
  </inventory>


</weapons>